<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="center-jumbotron">
    <div class="container">
      <h1>Welcome to the Journey!</h1>
      <p>
        Journey(ジャーニー)は挑戦する人々の発信プラットフォームです。
      <p>
      <p>
        我々が世界を変える。志高く。
      </p>
      <p>
        共に挑戦していこう。
      </p>
      <%= link_to "新規登録  & Challengerになる", signup_path, class: "btn signup" %>
      <div class="jjj">
        <%= link_to "ピックアップ記事", signup_path, class: "btn gion" %>
        <%= link_to "公開中の最新記事", "/index" , class: "btn evaluation" %>
      </div>
    </div>
  </div>

  <%= link_to image_tag("rails.svg", alt: "Rails logo", width: "200px"),
                        "https://rubyonrails.org/" %>
<% end %> 